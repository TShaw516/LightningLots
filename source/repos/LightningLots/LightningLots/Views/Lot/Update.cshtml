@model LightningLots.Models.ViewModel.LotUpdateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<h4>Lot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-controller="Lot" asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingAttachmentPath" />
            <div class="form-group">
                <label asp-for="LotName" class="control-label"></label>
                <input asp-for="LotName" class="form-control" />
                <span asp-validation-for="LotName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationTimeStamp" class="control-label"></label>
                <input asp-for="CreationTimeStamp" class="form-control" />
                <span asp-validation-for="CreationTimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attachment" class="form-control custom-file-input"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input multiple asp-for="Attachment" class="form-control custom-file-input">
                        <label class="custom-file-label">Update Attachment</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>